---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Solutions to Introduction to Probability by Blitzstein and Hwang" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <style is:global>
      :root {
        --primary-color: #2563eb;
        --text-color: #1f2937;
        --bg-color: #ffffff;
        --border-color: #e5e7eb;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        line-height: 1.6;
        color: var(--text-color);
        background-color: var(--bg-color);
        padding: 2rem;
        max-width: 1200px;
        margin: 0 auto;
      }

      h1, h2, h3, h4, h5, h6 {
        margin-top: 1.5rem;
        margin-bottom: 1rem;
        font-weight: 600;
        line-height: 1.25;
      }

      h1 { font-size: 2.5rem; }
      h2 { font-size: 2rem; border-bottom: 2px solid var(--border-color); padding-bottom: 0.5rem; }
      h3 { font-size: 1.5rem; }
      h4 { font-size: 1.25rem; }

      p {
        margin-bottom: 1rem;
      }

      a {
        color: var(--primary-color);
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      .math-block {
        display: block;
        margin: 1.5rem 0;
        padding: 1rem;
        background-color: #f9fafb;
        border-left: 4px solid var(--primary-color);
        overflow-x: auto;
      }

      .math-inline {
        background-color: #f3f4f6;
        padding: 0.1rem 0.3rem;
        border-radius: 3px;
      }

      nav {
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid var(--border-color);
      }

      nav ul {
        list-style: none;
        display: flex;
        gap: 2rem;
      }

      .problem {
        margin-bottom: 2rem;
        padding: 1.5rem;
        border: 1px solid var(--border-color);
        border-radius: 8px;
        background-color: #fafafa;
      }

      .problem-number {
        font-weight: bold;
        color: var(--primary-color);
        margin-bottom: 0.5rem;
      }
    </style>
    <script is:inline>
      // MathJax configuration for rendering math
      window.MathJax = {
        tex: {
          inlineMath: [['$', '$']],
          displayMath: [['$$', '$$']],
          processEscapes: true,
          processEnvironments: true,
        },
        options: {
          skipHtmlTags: ['script', 'noscript', 'style', 'textarea', 'pre'],
        },
      };
    </script>
    <script is:inline async src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js"></script>
  </head>
  <body>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/chapters">Chapters</a></li>
        <li><a href="https://github.com/edoardob90/blitzstein-intro-to-probability-solutions">GitHub</a></li>
      </ul>
    </nav>
    <main>
      <slot />
    </main>
    <footer style="margin-top: 4rem; padding-top: 2rem; border-top: 1px solid var(--border-color); text-align: center; color: #6b7280;">
      <p>Solutions contributed by the community | <a href="https://projects.iq.harvard.edu/stat110/home">Official Book Website</a></p>
    </footer>
  </body>
</html>
